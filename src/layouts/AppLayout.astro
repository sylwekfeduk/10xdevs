---
import "../styles/global.css";
import { UserNav } from "@/components/layout/UserNav";

interface Props {
  title?: string;
}

const { title = "HealthyMeal" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative min-h-screen">
    <!-- Background with blur effect -->
    <div class="fixed inset-0 bg-[url('https://images.unsplash.com/photo-1490818387583-1baba5e638af?q=80&w=2832')] bg-cover bg-center">
      <div class="absolute inset-0 backdrop-blur-sm bg-white/40"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 min-h-screen flex flex-col">
      <header class="bg-[#2d5f4f] shadow-lg">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 items-center justify-between">
            <div class="flex items-center gap-8">
              <a href="/dashboard" class="flex items-center gap-2 text-white hover:text-gray-200 transition-colors">
                <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"></path>
                  <path d="M7 2v20"></path>
                  <path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"></path>
                </svg>
                <span class="text-xl font-bold">HealthyMeal</span>
              </a>
              <nav class="hidden md:flex gap-6">
                <a href="/dashboard" class="text-sm font-medium text-white/90 hover:text-white transition-colors">Dashboard</a>
                <a href="/recipes" class="text-sm font-medium text-white/90 hover:text-white transition-colors">Recipes</a>
              </nav>
            </div>
            <UserNav client:load />
          </div>
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>
