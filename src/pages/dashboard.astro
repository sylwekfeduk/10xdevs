---
import AppLayout from "@/layouts/AppLayout.astro";
import { getLocaleFromUrl, localizedUrl, t } from "@/lib/i18n";

// Get locale from URL
const locale = getLocaleFromUrl(Astro.url);

// Check if user is authenticated
if (!Astro.locals.user) {
  // Redirect to login if not authenticated
  return Astro.redirect("/login");
}
---

<AppLayout title={t(locale, "dashboard.pageTitle")}>
  <div class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="space-y-8">
      <!-- Dashboard Title Area -->
      <div class="bg-[#F8F8F8] rounded-[12px] p-6 shadow-sm">
        <h1 class="text-2xl font-bold text-[#333333]">{t(locale, "dashboard.title")}</h1>
        <p class="text-[#666666] mt-2 text-base font-light">{t(locale, "dashboard.welcome")}</p>
      </div>

      <!-- Main Content Cards -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <!-- My Recipes Card -->
        <div class="rounded-[12px] bg-white shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <div class="w-12 h-12 rounded-lg bg-[#3F8C4F]/10 flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-[#3F8C4F]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                ></path>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-[#333333] mb-2">{t(locale, "dashboard.myRecipes")}</h2>
            <p class="text-[#666666] text-sm mb-4">{t(locale, "dashboard.myRecipesDescription")}</p>
          </div>
          <a
            href={localizedUrl("/recipes", locale)}
            class="inline-flex items-center text-[#3F8C4F] hover:text-[#2d5f4f] font-medium transition-colors text-sm"
          >
            {t(locale, "dashboard.viewRecipes")}
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Profile Settings Card -->
        <div class="rounded-[12px] bg-white shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <div class="w-12 h-12 rounded-lg bg-[#3F8C4F]/10 flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-[#3F8C4F]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-[#333333] mb-2">{t(locale, "dashboard.profileSettings")}</h2>
            <p class="text-[#666666] text-sm mb-4">{t(locale, "dashboard.profileSettingsDescription")}</p>
          </div>
          <a
            href={localizedUrl("/profile", locale)}
            class="inline-flex items-center text-[#3F8C4F] hover:text-[#2d5f4f] font-medium transition-colors text-sm"
          >
            {t(locale, "dashboard.editProfile")}
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Create Recipe Card -->
        <div class="rounded-[12px] bg-white shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <div class="w-12 h-12 rounded-lg bg-[#3F8C4F]/10 flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-[#3F8C4F]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-[#333333] mb-2">{t(locale, "dashboard.createRecipeCard")}</h2>
            <p class="text-[#666666] text-sm mb-4">{t(locale, "dashboard.createRecipeDescription")}</p>
          </div>
          <a
            href={localizedUrl("/recipes/new", locale)}
            class="inline-flex items-center text-[#3F8C4F] hover:text-[#2d5f4f] font-medium transition-colors text-sm"
          >
            {t(locale, "dashboard.createRecipeAction")}
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
